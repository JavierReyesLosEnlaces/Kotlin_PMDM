<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Escribe tu nombre: "
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textColorHighlight="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/lineaTexto"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/pulsa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/pulsa"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginBottom="150dp"
        android:text="@string/pulsa"
        app:layout_constraintBottom_toTopOf="@id/holaMundo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/holaMundo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#8C48D1"
        android:text="Hola"
        android:textAlignment="center"
        android:textColor="#FBE9E7"
        app:layout_constraintBottom_toTopOf="@id/viewVerde" />
    <View
        android:id="@+id/viewVerde"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#6EFF55"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>