<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageApp.MessageActivity">


    <TextView
        android:id="@+id/topMesg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Send a message"
        android:textSize="28dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/botonSend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mensgSend"
        />

    <EditText
        android:id="@+id/mensgSend"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#B46750A3"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Write a message"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonSend"
        app:layout_constraintStart_toStartOf="parent"
       />
    <TextView
        android:id="@+id/textoSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="texto de prueba"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor= "#B46750A3"
        android:layout_gravity="center"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topMesg"/>


</androidx.constraintlayout.widget.ConstraintLayout>